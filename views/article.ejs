<%- include('./partials/head') %>

<main>
    <article>
        <h1><%-article.title.rendered%></h1>
        <picture>
            <img src="<%-article.jetpack_featured_media_url%>" 
            alt="artikel afbeelding"
            width="<%=article.yoast_head_json.og_image[0].width%>"
            height="<%=article.yoast_head_json.og_image[0].height%>">
        </picture>

        <div class="article-date-header">
            <div>
                <a href=""><%=article.yoast_head_json.schema["@graph"][0].articleSection[0]%></a>
                <time>
                    <%= new Date(article.date).getDate() %>/<%= new Date(article.date).getMonth() %>/<%= new
                    Date(article.date).getFullYear() %>
                </time>
          </div>

          <form action="/article/<%=article.slug%>" method="post" id="like-counter">
            <label class="checkbox-button" for="like-checkbox">
                â™¥ <%-share%>
                <input type="checkbox" id="like-checkbox" name="slug" value="<%-article.slug%>">
            </label>
        </form>
        
        
        </div>

        <section class="article-detail_author">
            <strong><%-article.excerpt.rendered%></strong>

            <section>
            <h2><span class="article-detail_author_type">Auteur:</span> <%=article.yoast_head_json.author%></h2>
            </section>
            <section>
                <h2><span class="article-detail_author_type">Leestijd:</span> < 3 min</h2>
            </section>
        </section>
        <section class="article-detail_content">
            <%-article.content.rendered%>
        </section>
    </article>
</main>


<%- include('./partials/foot') %>

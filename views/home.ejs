<%- include('./partials/head') %>
<main>
  <ul class="hoofdpagina">
    <%articles.forEach(article => {
      {%>
      <li>
        <a href="/artikel/<%=article.slug%>">

          <img src="<%=article.jetpack_featured_media_url%>" 
          width="<%=article.yoast_head_json.og_image[0].width%>" 
          height="<%=article.yoast_head_json.og_image[0].height%>">

          <h1><%-article.title.rendered%></h1>
        </a>
        
        <div>
          <time>
            <%= new Date(article.date).getDate() %>/<%= new Date(article.date).getMonth() %>/<%= new Date(article.date).getFullYear() %>
          </time>
          <span><%=article.shares%> keer gedeeld</span>   
      </div>

        <p><%- article.excerpt.rendered %></p>


      </li>
      <%}
    })%>
  </ul>
  <h1>Onze supporters</h1>
</main>
<%- include('./partials/foot') %>

    
